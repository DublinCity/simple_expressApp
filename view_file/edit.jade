doctype html
html
	head
		meta(charset='utf-8')
	body
		h1 
			a(href='/topic') Server Side JavaScript
		ul
			each topic in topics
				li
					- rid = encodeURIComponent(topic['@rid'])
					a(href='/topic/'+rid)=topic.title
			
		form(action='/topic/'+encodeURIComponent(topic['@rid'])+'/edit',method='post')
			p
				input(type='text' value=topic.title name='title' placeholder='title')
			p
				textarea(name='description' placeholder='decription')=topic.description
			p
				input(type='text' name='author' value=topic.author)
			p
				input(type='submit')
